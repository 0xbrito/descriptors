{
  "tags": {
    "allowUnknownTags": true
  },
  "source": {
    "include": ["./src"],
    "exclude": ["node_modules"],
    "includePattern": "\\.(jsx|js|ts|tsx)$"
  },
  "plugins": [
    "node_modules/better-docs/typescript",
    "plugins/markdown",
    "node_modules/better-docs/category"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "search": true
    //,"better-docs": {
    //  "name": "BitcoinerLab Descriptors",
    //  //"logo": "https://bitcoinerlab.com/favicon.svg",
    //  "title": "Descriptors - BitcoinerLab", // HTML title
    //  "hideGenerator": false,
    //  "navLinks": [
    //    {
    //      "label": "Github",
    //      "href": "https://github.com/bitcoinerlab/descriptors"
    //    },
    //    {
    //      "label": "Home",
    //      "href": "https://bitcoinerlab.com/modules/descriptors"
    //    }
    //  ]
    //}
  },
  "opts": {
    "template": "node_modules/better-docs",
    "readme": "README.md",
    "destination": "./docs",
    "recurse": true,
    "verbose": true
  }
}
